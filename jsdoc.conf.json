{
    "tags": {
        "allowUnknownTags": true
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "parser": "gfm",
        "hardwrap": false,
        "idInHeadings": true
    },
	"opts": {
		"destination": "./jsdoc/",
		"encoding": "utf8",
		"private": false,
		"recurse": true,
		"verbose": false,
		"template": "node_modules/docdash"
	},
    "templates": {
        "default": {
            "outputSourceFiles": true,
			"layoutFile": "./node_modules/docdash/tmpl/layout.tmpl"
        },
		"cleverLinks": false,
		"monospaceLinks": false
    },
	"docdash": {
		"static": false,
		"sort": true
	}

}